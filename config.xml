<?xml version='1.0' encoding='utf-8'?>
<widget id="com.academiafitness" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Academia Fitness</name>
    <description>
        Aplicativo de fichas de treino para os alunos da academia fitness
    </description>
    <author email="dev@cordova.apache.org" href="http://localhost:8000">
       Academia Fitness
    </author>
    <content src="index.html" />
    <allow-navigation href="*"/>
    <icon src="resources/icon.png"/>
   <preference name="permissions" value="none" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="LoadUrlTimeoutValue" value="20000"/>
    <preference name="BackgroundColor" value="0xF2F2F2FF" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-statusbar" spec="*" />

    <platform name="android">
    <preference name="StatusBarBackgroundColor" value="#04062f"
    />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
</platform>
</widget>
